{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@north/common": ["../../packages/common/src"],
      "@north/design": ["../../packages/design/src"],
      "@north/north-client-sdk": ["../../packages/north-client-sdk"],
      "@north/north-client-sdk/*": ["../../packages/north-client-sdk/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "../../types/**/*.d.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vitest.config.ts"
  ],
  "exclude": ["dist"],
  "references": [
    { "path": "../../packages/common" },
    { "path": "../../packages/design" }
  ]
}
